{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	// "parserOptions": {
	// 	"ecmaVersion": 9,
	// 	"sourceType": "module"
	// },
	"parser": "@babel/eslint-parser",
	"globals": {
		"PIXI": true
	},
	"rules": {
		"no-console": "off",
		"no-useless-escape": "off",
		"indent": ["error", "tab"],
		"strict": [
			"error",
			"global"
		],
		"curly": "warn"
	}
}
